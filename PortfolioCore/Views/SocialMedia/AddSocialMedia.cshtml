@model SocialMedia
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Sosyal Medya Bağlantısı Ekleme Sayfası</h1>
<form method="post">
    <label>Sosyal Medya Adı</label>
    <input type="type" class="form-control" asp-for="Name" />
    <br />
    <label>İcon</label>
    <input type="type" class="form-control" asp-for="Icon" />
    <br />
    <label>Bağlantı Adresi</label>
    <input type="type" class="form-control" asp-for="Link" />
    <br />
    <button class="btn btn-outline-info">Sosyal Medya Bağlantısı Ekle</button>
</form>
